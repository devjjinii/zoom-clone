doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Noom
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header
            h1 Noom
        main
            div#welcome
                form
                    input(placeholder="방 제목", required, type="text")
                    button 방 입장하기
            div#room
                h3
                ul
                form#name
                    input(placeholder="닉네임을 입력하세요.", required, type="text")
                    button 저장
                form#msg
                    input(placeholder="메세지를 입력하세요.", required, type="text")
                    button 전송
        script(src="/socket.io/socket.io.js")    
        script(src="/public/js/app.js")
        